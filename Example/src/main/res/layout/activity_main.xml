<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.ohmage.reminders.example.MainActivity">

    <Button
        android:id="@+id/show_all_reminders"
        android:text="@string/show_all_reminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/show_specific_reminders"
        android:text="@string/show_specific_reminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/show_group_reminders"
        android:text="@string/show_group_reminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/gutter"
        android:layout_marginBottom="@dimen/gutter"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/set_survey_taken"
        android:text="@string/set_survey_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/clear_survey_taken"
        android:text="@string/clear_survey_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
